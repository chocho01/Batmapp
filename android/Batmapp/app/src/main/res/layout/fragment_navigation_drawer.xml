
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.epsi.batmapp.activity.ListAlert$PlaceholderFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/unknow"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"/>

   <TextView
       android:id="@+id/leftMenuUserName"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAllCaps="true"
       android:textColor="@color/bat_green"
       android:layout_marginLeft="10dp"
       android:textStyle="bold"/>

    <TextView
        android:id="@+id/leftMenuUserMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/bat_green"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"/>

    <ListView
        android:id="@+id/mleftMenuListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>